{
  "files.exclude": { ".git/": true },
  "search.exclude": { "**/node_modules": true, "**/dist": true },
  "editor.tabCompletion": "on",
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "wordWrapColumn",
