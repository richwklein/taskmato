{
  "name": "taskmato",
  "private": true,
  "description": "A Pomodoro timer for Todoist tasks.",
  "version": "1.0.0-alpha.14",
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "clean": "rm -rf .netlify dist node_modules pnpm-lock.yaml",
    "dev": "vite",
    "build": "pnpm exec tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix \"**/*.{js,mjs,cjs,jsx,ts,tsx,json}\"",
    "lint:check": "eslint \"**/*.{js,mjs,cjs,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{js,mjs,cjs,jsx,ts,tsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,jsx,ts,tsx,json,md,mdx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:list": "vitest list",
    "test:coverage": "vitest run --coverage",
    "verify": "pnpm lint:check && pnpm format:check && pnpm test"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "axios": "^1.13.2",
    "dexie": "^4.2.1",
    "mui-markdown": "^2.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.13.6",
    "jsdom": "^27.3.0",
    "netlify-cli": "^23.12.3",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
