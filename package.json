{
  "name": "taskmato",
  "private": true,
  "description": "A Pomodoro timer for Todoist tasks.",
  "version": "1.0.0-alpha.10",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm exec tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix \"**/*.{js,mjs,cjs,jsx,ts,tsx,json}\"",
    "lint:check": "eslint \"**/*.{js,mjs,cjs,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{js,mjs,cjs,jsx,ts,tsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,jsx,ts,tsx,json,md,mdx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:list": "vitest list",
    "test:coverage": "vitest run --coverage",
    "verify": "pnpm lint:check && pnpm format:check && pnpm test"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@preact/signals-core": "^1.12.0",
    "@preact/signals-react": "^3.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.11.0",
    "mui-markdown": "^2.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.1.0",
    "netlify-cli": "^21.6.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
